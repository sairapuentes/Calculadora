        android:id="@+id/buttonResta"
        android:layout_width="81dp"
        android:layout_height="74dp"
        android:backgroundTint="#45B39D"
        android:text="-"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
